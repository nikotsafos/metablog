<h2>create a new article</h2>

<form action="/articles" method="POST" role="form">
  <div class="form-group">
    <label for="name">Title</label>
    <input required type="text" class="form-control" id="title" placeholder="Title" name="title">
  </div>

  <div class="form-group">
    <label for="name">Author</label>
    <select name="authorId" class="form-control">
      <option value="0">Choose Your Name Below</option>
      <% if(authors)%>
      <%authors.forEach(function(a){%>
        <option value="<%=a.id%>">
          <%=a.name%>
        </option>
      <%});%>
    </select>
    Don't see your name?
    <a href="/authors/new">Register Here</a>
  </div>
  <div class="form-group">
    <label for="name">Content:</label>
    <textarea type="text" class="form-control" id="body" placeholder="Body" name="content"></textarea>
  </div>

  <button type="submit" class="btn btn-primary">Submit</button>
</form>
